#include <stdio.h>
#define sf scanf
#define pf printf
#define max 30

int PideNumero();
void RellenaVector(float vector[max], int fila);
void RestaDeVectores1(float vectorResta[max],float vec1[max],float vec2[max],int fila);
void RestaDeVectores2(float vectorResta[max],float vec1[max],float vec2[max],int fila);

int main(void){
    int a;
   
    pf("Ingresa dimension de tus vectores:\n");
    a=PideNumero();
    
    float Resta[a];
    
    pf("Ingresa vector 1:\n");
    float vector1[a];
    RellenaVector(vector1,a);
    
    float vector2[a];
    pf("Ingresa vector 2:\n");
    RellenaVector(vector2,a);

    pf("Indica el orden de tu resta\n");
    int op;
    pf("Opcion 1)vector 1 - Vector 2\n");
    pf("Opcion 2)vector 2 - Vector 1\n");
    sf("%i",&op);

    switch(op){
        case 1:
        RestaDeVectores1(Resta,vector1,vector2,a);
        break;

        case 2:
        RestaDeVectores2(Resta,vector1,vector2,a);
        break;

        default:
        pf("Ingresa opcion correcta\n");
        break;
    
    }

    return 0;
}

int PideNumero(){
    int n;
    pf("Dame un numero\n");
    sf("%i",&n);
    return n;

}

void RellenaVector(float vector[max], int fila){
    int i;
    pf("Ingresa las componentes de tu vector:\n");
    for(i=0;i<fila;i++){
        pf("Componente %i: ",i+1);
        sf("%f", &vector[i]);
    }
}

void RestaDeVectores1(float vectorResta[max],float vec1[max],float vec2[max],int fila){
    int i;
pf("Tu vector resultante es: \n");
    for(i=0;i<fila;i++){
        vectorResta[i]=vec1[i]-vec2[i];
        pf("%.2f \n", vectorResta[i]);
    }
}

void RestaDeVectores2(float vectorResta[max],float vec1[max],float vec2[max],int fila){
    int i;
pf("Tu vector resultante es: \n");
    for(i=0;i<fila;i++){
        vectorResta[i]=vec2[i]-vec1[i];
        pf("%.2f \n", vectorResta[i]);
    }
}
